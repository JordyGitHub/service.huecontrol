<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.huecontrol"
       name="hue control"
       version="0.1"
       provider-name="Michel van de Wetering">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.service"
             library="huecontrol.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Change your hue lights when a movie starts.</summary>
    <description lang="en">This addon will change your lighting when the movie starts, gets paused or stops.</description>
  </extension>
</addon>